<h1>Lista de Clientes</h1>
<%= link_to 'Novo Cliente', new_cliente_path %><br/><br/>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.idade %></td>
        <td><%= link_to 'Exibir', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


